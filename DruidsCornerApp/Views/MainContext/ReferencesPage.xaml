                        <!--                 <Grid.RowDefinitions> -->
                        <!--                     <RowDefinition Height="*" /> -->
                        <!--                     <RowDefinition Height="*" /> -->
                        <!--                     <RowDefinition Height="*" /> -->
                        <!--                 </Grid.RowDefinitions> -->
                        <!--                 <Grid.ColumnDefinitions> -->
                        <!--                     <ColumnDefinition Width="Auto" /> -->
                        <!--                     <ColumnDefinition Width="Auto" /> -->
                        <!--                 </Grid.ColumnDefinitions> -->
                        <!--                 <Frame CornerRadius="100" -->
                        <!--                        BorderColor="White" -->
                        <!--                        Margin="0,0,10,0" -->
                        <!--                        Padding="7" -->
                        <!--                        Grid.RowSpan="3"> -->
                        <!--                     <Image -->
                        <!--                         WidthRequest="80" -->
                        <!--                         HeightRequest="80" -->
                        <!--                         Aspect="AspectFit" -->
                        <!--                         HorizontalOptions="Center" -->
                        <!--                         VerticalOptions="Center" -->
                        <!--                         Source="{Binding ImageSource}" /> -->
                        <!--                 </Frame> -->
                        <!--                 <Label Grid.Row="1" Grid.Column="1" TextColor="White" -->
                        <!--                        Text="{Binding Name}" -->
                        <!--                        FontAttributes="Bold" /> -->
                        <!--                 <Label Grid.Row="2" TextColor="White" -->
                        <!--                        Grid.Column="1" -->
                        <!--                        Text="{Binding Brewer}" -->
                        <!--                        FontAttributes="Italic" /> -->
                        <!--             </Grid> -->
                        <!--         </Frame> -->
                        <!--     </DataTemplate> -->
                        <!-- </CollectionView.ItemTemplate> -->
                    </CollectionView>
                </StackLayout>
            </ScrollView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>