<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:headers="clr-namespace:DruidsCornerApp.Controls.Headers"
             x:Class="DruidsCornerApp.Views.ResetPasswordPage">
    <ContentPage.Content>
        <ScrollView>
            
            <!-- Header -->
            <headers:BasicHeader x:Name="Header"
                                 BackgroundColor="#ff6a00"
                                 BackIcon="back.svg"
                                 BackIconColor="WhiteSmoke"
                                 BackIconHeightRequest="28"
                                 BackIconWidthRequest="28"
                                 Title="{Binding Title}"
                                 TitleColor="WhiteSmoke"
                                 TitleFontSize="20">
            </headers:BasicHeader>
            
            
        </ScrollView>
    </ContentPage.Content>
</ContentPage>