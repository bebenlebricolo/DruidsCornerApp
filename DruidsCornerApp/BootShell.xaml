<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="DruidsCornerApp.BootShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:login="clr-namespace:DruidsCornerApp.Views.Login"
    x:Name="Shell"
    FlyoutBehavior="Disabled"
    >
    
    <ShellContent ContentTemplate="{DataTemplate login:BasicSignInPage}" Route="BasicSignInPage"/>
    <ShellContent ContentTemplate="{DataTemplate login:AccountCreationPage}" Route="AccountCreationPage"/>
    <ShellContent ContentTemplate="{DataTemplate login:ResetPasswordPage}" Route="ResetPasswordPage"/>
    <ShellContent ContentTemplate="{DataTemplate login:GoogleSignInPage}" Route="GoogleSignInPage"/>
</Shell>
